@model LearningManagementSystem.MVC.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>SignUp</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Signup/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/Signup/css/style.css">

    <style>
        #c1 {
            max-width: 1600px;
            width: 1500px;
            height: 700px;
            margin-top: 0px
        }

        #c2 {
            padding: 0px;
            width: 100%;
            height: 100%;
        }
    </style>

</head>
<body>
    <div class="main" id="c2">
        <section class="signup">
            <div class="container" id="c1">
                <div class="signup-content" style="padding-top:60px">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="UserName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="UserName" placeholder="Your Name" />
                                <span asp-validation-for="UserName" style="color:orangered"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="Email" placeholder="Your Email" />
                                <span asp-validation-for="Email" style="color:orangered"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserAddress"><i class="zmdi zmdi-home"></i></label>
                                <input asp-for="UserAddress" placeholder="Your Address" />
                                <span asp-validation-for="UserAddress" style="color:orangered"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber"><i class="zmdi zmdi-phone"></i></label>
                                <input asp-for="PhoneNumber" placeholder="Your MobileNumber" />
                                <span asp-validation-for="PhoneNumber" style="color:orangered"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" asp-for="Password" placeholder="Password" />
                                <span asp-validation-for="Password" style="color:orangered"></span>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" class="form-submit" value="SignUp" />
                            </div>
                            <div>
                                <span style="color:red"><b>@ViewBag.Message</b></span>
                            </div>
                            <div>
                                <span style="color:green"><b>@ViewBag.Notify</b></span>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/Signup/images/signup-image.jpg" alt="sing up image"></figure>
                        <a asp-action="Login" asp-controller="User" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
