@model IEnumerable<LearningManagementSystem.MVC.Models.CourseComplaint>

@{
    ViewData["Title"] = "ViewComplaints";
    Layout = "~/Views/Shared/DashboardBody.cshtml";
}

<br>
<h4 style="text-align:center">Complaints</h4>
<br>
<section class="section section-top section-full bg-white" style="padding-bottom:300px">
    @if (Model != null)
   {
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Complaint Message</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.CourseName</td>
                <td>@item.ComplaintMessage</td>
                <td>@item.ComplaintStatus</td>
            </tr>
            }
        </tbody>
    </table>
    }
    else
    {
    <h3 style="text-align:center">@ViewBag.Error</h3>
    }
</section>
