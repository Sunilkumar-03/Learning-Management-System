@model LearningManagementSystem.MVC.Models.Complaints

@{
    ViewData["Title"] = "RaiseComplaint";
    Layout = "~/Views/Shared/DashboardBody.cshtml";
}

@{ 
    var Message = TempData["ErrorMessage"];
}
<br />
<br />
<h3 style="text-align:center">Raise Complaint</h3>
<br />
<br />
<hr />
<div style="text-align:center" class="row">
    <div class="col-md-4">
        <form asp-action="RaiseComplaint" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Course Name</label>
                <select asp-items=@ViewBag.generList asp-for="CourseID" class="form-control"></select>
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComplaintMessage" class="control-label"></label>
                <textarea asp-for="ComplaintMessage" class="form-control"></textarea>
                <span asp-validation-for="ComplaintMessage" style="color:orangered"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">@ViewBag.Error</span>
            </div>
            <div class="form-group">
                <span class="text-danger">@Message</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Raise" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

