@model LearningManagementSystem.MVC.Models.Course

@{
    ViewData["Title"] = "ToUpdateCourse";
    Layout = "~/Views/Shared/AdminDashboardBody.cshtml";
}

<form asp-action="UpdateCourse" asp-controller="Course" method="post">
    <br />
    <br />
    <b>Enter Course Name To Search :</b>
    <br />
    <br />
    <input type="text" name="name" id="SearchCourse" placeholder="Course Name" />&nbsp;&nbsp;
    <input type="submit" value="Search" class="btn btn-danger" />
    <span class="text-danger">@ViewBag.ErrorMessage</span>
</form>

@{
        var data = TempData["ErrorMessage"];
    }
<br />
<br />
@if (data != null)
{
    <h3>Update Course Details</h3>
    <hr />
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ConfirmUpdateCourse" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <label asp-for="CourseID" class="control-label"></label>
                    <input asp-for="CourseID" class="form-control" />
                    <span asp-validation-for="CourseID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseName" class="control-label"></label>
                    <input asp-for="CourseName" class="form-control" value="@Model.CourseName" readonly />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseDuration" class="control-label"></label>
                    <input asp-for="CourseDuration" class="form-control" value="@Model.CourseDuration" />
                    <span asp-validation-for="CourseDuration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseContent" class="control-label"></label>
                    <input asp-for="CourseContent" class="form-control" value="@Model.CourseContent" />
                    <span asp-validation-for="CourseContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseQuiz" class="control-label"></label>
                    <input asp-for="CourseQuiz" class="form-control" value="@Model.CourseQuiz" />
                    <span asp-validation-for="CourseQuiz" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseImage" class="control-label"></label>
                    <input asp-for="CourseImage" class="form-control"  value="@Model.CourseImage"/>
                    <span asp-validation-for="CourseImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseTutor" class="control-label"></label>
                    <input asp-for="CourseTutor" class="form-control" value="@Model.CourseTutor" />
                    <span asp-validation-for="CourseTutor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

}
            else
            {
                <p class="text-danger">@data</p>
            }


